
@{
    ViewBag.Title = "Registation";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-6">
                <div class="chart-statistic-box">
                    <form action="Registation" method="POST" class="form-horizontal">
                        <fieldset>
                            <legend> Register Student </legend>
                            <div class="clearfix"></div>
                            <div class="form-group">
                                <div class="col-md-5 control-label">
                                    <label for="txtCode">Name</label>
                                </div>
                                <div class="col-md-7">
                                    <input type="text" class="form-control" id="txtCode" placeholder="Address" name="Name" />
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            
                           
                            <div class="form-group">
                                <div class="col-md-5 control-label">
                                    <label for="txtCustomerLocation">Address</label>
                                </div>
                                <div class="col-md-7">
                                    <input type="text" class="form-control" id="txtCustomerLocation" placeholder="Address" name="Address" />
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group">
                                <div class="col-md-5 control-label">
                                    <label for="txtDestinationCountry">Gender</label>
                                </div>
                                <div class="col-md-7">
                                    <!-- Gender-->
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group">
                                <div class="col-md-5 control-label">
                                    <label for="txtDestinationCity">NIC</label>
                                </div>
                                <div class="col-md-7">
                                    <input type="text" class="form-control" id="txtDestinationCity" placeholder="NIC" name="NIC" />
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            
                            <div class="form-group">
                                <div class="col-md-5 control-label">
                                   
                                </div>
                                <div class="col-md-7">
                                    <input type="submit" class="form-control button" />
                                </div>
                            </div>
                                </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>